<Window x:Name="Win" x:Class="HellClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HellClicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid MouseLeftButtonDown="SecondPlayerClick" KeyDown="FirstPlayerClick" >
        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Left" Height="61" Margin="40,204,0,0" VerticalAlignment="Top" Width="715" Value="50" />
        <Label Content="1 player" HorizontalAlignment="Left" Margin="40,81,0,0" VerticalAlignment="Top" Height="118" Width="228" FontSize="48"/>
        <Label Content="2 player" HorizontalAlignment="Left" Margin="527,81,0,0" VerticalAlignment="Top" Height="118" Width="228" FontSize="48"/>
        <Label x:Name="VictoryLabel" Content="" HorizontalAlignment="Left" Margin="40,294,0,0" VerticalAlignment="Top" Width="715" Height="87" FontSize="48" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
