<Page x:Class="AsianCuisine.DishTypes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AsianCuisine"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DishTypes">

    <Grid>
        <Grid.Resources>
            <Style  x:Key="ItemMargin" TargetType="ListBoxItem">
                <Setter Property="Margin" Value="5" />
            </Style>
        </Grid.Resources>

        <ListBox x:Name="DishTypeList" Height="430" Margin="250,10,0,0" Width="294" RenderTransformOrigin="0.5,0.5" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" ItemContainerStyle="{StaticResource ItemMargin}">
        </ListBox>
    </Grid>
</Page>
