<Page x:Class="AsianCuisine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsianCuisine"
        mc:Ignorable="d"
        Title="MainWindow" WindowHeight="450" WindowWidth="800" Height="450" Width="800">
    <Grid x:Name="Grid">
        <Grid.Resources>
            <Style  x:Key="ItemMargin" TargetType="ListBoxItem">
                <Setter Property="Margin" Value="15" />
            </Style>
        </Grid.Resources>

        <ListBox x:Name="Countries" Height="327" Margin="245,81,0,0" Width="294" RenderTransformOrigin="0.5,0.5" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" ItemContainerStyle="{StaticResource ItemMargin}">
        </ListBox>
        <Label Content="Азиатские кухни:" HorizontalAlignment="Left" Margin="301,28,0,0" VerticalAlignment="Top" Width="196" Height="47" FontSize="20"/>
    </Grid>
</Page>
