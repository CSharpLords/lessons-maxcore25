<Button x:Class="AsianCuisine.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsianCuisine"
             Name="iconButton" 
            Padding="20,10"
             mc:Ignorable="d" Click="iconButton_Click" >

    <StackPanel Orientation="Horizontal">
        <Image Source="{Binding Icon, ElementName=iconButton}" Width="20" Height="20" Name="Image"/>
        <TextBlock Margin="10,0,0,0" Text="{Binding Label, ElementName=iconButton}">
        </TextBlock>
    </StackPanel>
</Button>
